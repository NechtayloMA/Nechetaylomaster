<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:elevation="4dp">

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Создание заявки"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#b50202"
            android:layout_marginBottom="32dp" 
            android:layout_marginTop="80dp"/>

        <!-- Поле для темы заявки -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            app:errorEnabled="true"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Тема заявки"
                android:inputType="textCapSentences"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Поле для описания проблемы -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            app:errorEnabled="true"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:textSize="16sp"
                android:gravity="top"
                android:hint="Описание проблемы"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="4"
                android:scrollbars="vertical" />

        </com.google.android.material.textfield.TextInputLayout>
//
        <!-- Поле для выбора приоритета -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:textSize="16sp"
            app:errorEnabled="true"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:endIconMode="dropdown_menu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/actvPriority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Выберите приоритет"
                android:inputType="none"
                android:completionHint="Выберите приоритет из списка"
                android:dropDownHeight="wrap_content"
                android:dropDownVerticalOffset="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопка отправки заявки -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправить заявку"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:padding="16dp"
            android:background="@color/button_view_applications_background"
            android:textColor="@android:color/white"
            android:stateListAnimator="@null"/>

        <!-- КНОПКА ДЛЯ ПРОСМОТРА ЗАЯВОК -->
        <Button
            android:id="@+id/btnViewApplications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Посмотреть мои заявки"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@color/button_meters_color"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</ScrollView>