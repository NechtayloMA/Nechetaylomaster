<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MetersActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_meter_readings"
        android:textSize="28sp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/button_login_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_cubic_meters"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etWater"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:inputType="numberDecimal"
        android:importantForAutofill="yes"
        android:contentDescription="@string/water_input_description"
        android:hint="@string/water_hint"
        android:autofillHints="water_reading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gas_cubic_meters"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etGas"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:inputType="numberDecimal"
        android:importantForAutofill="yes"
        android:contentDescription="@string/gas_input_description"
        android:hint="@string/gas_hint"
        android:autofillHints="gas_reading"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/electricity_kwh"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/etElectricity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        android:inputType="numberDecimal"
        android:importantForAutofill="yes"
        android:contentDescription="@string/electricity_input_description"
        android:hint="@string/electricity_hint"
        android:autofillHints="electricity_reading"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="@string/save_button"
        android:layout_marginTop="16dp"
        android:background="@color/button_login_color"
        android:textColor="@color/white"/>

</LinearLayout>