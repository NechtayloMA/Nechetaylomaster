<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainMenuActivity">

    <!-- Логотип университета -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo_university"
        android:contentDescription="Логотип университета"
        android:scaleType="fitCenter" />

    <!-- Контактная информация -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_phone"
            android:layout_marginEnd="8dp"
            android:contentDescription="Телефон" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 (800) 550-03-63"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMeters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Снятие счетчиков"
        android:layout_marginBottom="8dp"
        android:background="@color/button_meters_color"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnBarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сканирование штрих-кода"
        android:layout_marginBottom="8dp"
        android:background="@color/button_meters_color"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnCreateRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Оставить заявку"
        android:layout_marginBottom="8dp"
        android:background="@color/button_meters_color"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список актуальных заявок"
        android:layout_marginBottom="8dp"
        android:background="@color/button_meters_color"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="О программе"
        android:layout_marginBottom="32dp"
        android:background="@color/button_meters_color"
        android:textColor="@color/white"/>

    <!-- Название университета -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="МОСКОВСКИЙ УНИВЕРСИТЕТ ИМ. С.Ю. ВИТТЕ"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="260dp"
        android:textColor="@color/button_login_color" />

</LinearLayout>